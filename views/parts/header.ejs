              userCase.classList.replace('alert-danger','alert-success')
              userCase.innerHTML=`${friendData.name} is online now`

       })
       
       socket.on(`offline${'<%-seller%>'}`,friendData=>{
           console.log(`online${'<%-seller%>'}`)
        let userCase=document.querySelector('#offline')
              userCase.classList.replace('alert-success','alert-danger')
              userCase.innerHTML=`${friendData.name} is offline now`

       })



