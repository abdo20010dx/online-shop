<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>home</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/intlTelInput.css">
    <style>
        input[name='email'],input[name='pass'],input[name='address']{
            width: 90%;
            display: inline-block;
        }
        .social-input{
            padding: 3px;
            border-radius: 7px;
                }
                .social-input:focus{
                    box-shadow: 0px 0px 10px 0px #88c2ff;

                }
        .fom-icon{
            width: 30px;
            height: 30px;
        }
        .job-span{
            text-align: center;
            font-weight: bolder;
        }
        .job-img{
            width: 100%;
            height:inherit;
        }
        .job-label{
            margin-bottom: 20px;
            text-align: center;
            width: 100px;
            height: 100px;
                }
        input[type='radio']{
            display: none;
        }
        input[type='radio']:checked + label {
            opacity: 70%;
            color: white;
            background-color: #007bff;
        }
        .iti__flag{background-image: url('/img/flags.png');}
        @media (-webkit-min-device-pixel-ratio:2),(min-resolution:192dpi) {
            .iti__flag{background-image: url('/img/flags@2x.png');}

        }
        .profileImage{
            border-radius: 50%;
            width: 100px;
            height: 100px;
        }
        .openchat{
            width: 200px;
            right: inherit;
            border: 1px solid black;
            position: fixed;
            bottom: 2px;
            display: block;

        }
        .chat{
            width: 200px;
            height: 300px;
            right: inherit;
            border: 1px solid black;
            position: fixed;
            bottom: 2px;
            display: none;
            padding: 5px;
        }
        .chat button{
            width: 100%;
        
        }
        .chat p span{
            padding: 2px;
        }
        .speaker1{
            display: block;

            margin: 2px;
            text-align: right;
            background-color: rgb(121, 161, 187);
        }
        .speaker2{
            display: block;

            margin: 2px;
            text-align: left;
            background-color:silver;
        }
        .imagechat{
            display: inline;
            border-radius: 50%;
            margin: 2px;
            width: 30px;
            height: 30px;
        }
        .chatinput{
            bottom: 0px;
            position: absolute;
            width: 95%;
        }
    </style>
    <script src="/socket.io/socket.io.js"></script>
